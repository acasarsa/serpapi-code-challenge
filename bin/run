#!/usr/bin/env ruby

# frozen_string_literal: true

require_relative '../lib/google_carousel_extractor'

default_html_file = File.expand_path('../spec/fixtures/van-gogh-paintings.html', __dir__)

# Get command-line argument for file path, if provided
file_path = ARGV[0] ? File.expand_path(ARGV[0]) : default_html_file

# Initialize the parser
parser = GoogleCarouselExtractor::Parsers::HtmlFileParser.new

# Run the extraction
GoogleCarouselExtractor.run(parser, file_path)
